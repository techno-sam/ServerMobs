{
  "schemaVersion": 1,
  "id": "server_mobs",
  "version": "${version}",

  "name": "Server Mobs",
  "description": "Create mobs serverside",
  "authors": [
    "Slimeist"
  ],
  "contact": {
    "homepage": "https://github.com/techno-sam/ServerMobs",
    "sources": "https://github.com/techno-sam/ServerMobs"
  },

  "license": "MIT",
  "icon": "assets/server_mobs/icon.png",

  "environment": "server",
  "entrypoints": {
    "server": [
      "com.slimeist.server_mobs.ServerMobsMod"
    ]
  },
  "mixins": [
    "server_mobs.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "~1.18.2",
    "java": ">=17",
    "polymer": "*",
    "polymer-blocks-ext": "*",
    "hologram-api": "*",
    "nbtcrafting": "*",
    "server_mobs_api": "${api_version}"
  },
  "recommends": {
    "server_translations_api": "*",
    "polypack_host": "*"
  },
  "accessWidener" : "server_mobs.accesswidener"
}
