{
  "schemaVersion": 1,
  "id": "server_mobs_api",
  "version": "${api_version}",

  "name": "Server Mobs API",
  "description": "Library to create mobs serverside - if you are looking for actual content, download ServerMobs",
  "authors": [
    "Slimeist"
  ],
  "contact": {
    "homepage": "https://github.com/techno-sam/ServerMobs",
    "sources": "https://github.com/techno-sam/ServerMobs"
  },

  "license": "MIT",
  "icon": "assets/server_mobs_api/icon.png",

  "environment": "server",
  "entrypoints": {
    "server": [
      "com.slimeist.server_mobs.api.ServerMobsApiMod"
    ]
  },
  "mixins": [
    "server_mobs_api.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "~1.19",
    "java": ">=17",
    "polymer": "*",
    "polymer-blocks-ext": "*",
    "hologram-api": "*"
  },
  "recommends": {
    "server_translations_api": "*",
    "polypack_host": "*"
  },
  "accessWidener": "server_mobs_api.accesswidener"
}
